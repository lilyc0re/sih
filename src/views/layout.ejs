<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Sentiment Analysis</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <header>
    <div class="topbar">
      <div class="brand">Sentiment Analysis</div>
      <div class="user-area">
        <% if (typeof user !== 'undefined') { %>
          <span><%= user.name || user.email %></span>
          <form method="post" action="/logout" style="display:inline"><button>Logout</button></form>
        <% } %>
      </div>
    </div>
  </header>
  <div class="layout">
    <nav class="sidebar">
      <ul>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/analytics">Analytics</a></li>
        <li><a href="/upload-docs">Upload Docs</a></li>
        <li><a href="/upload-comment">Upload a Comment</a></li>
        <li><a href="/sentiment-analysis-comments">Comments Analysis</a></li>
        <li><a href="/word-cloud">Word Cloud</a></li>
        <li class="section">My profile</li>
        <li><a href="/my-comments">My comments</a></li>
        <li><a href="/settings">Settings</a></li>
      </ul>
    </nav>
    <main class="content">
      <%- body %>
    </main>
  </div>
  <script src="/js/app.js"></script>
</body>
</html>



