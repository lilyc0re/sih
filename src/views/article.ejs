<section>
  <h2>Articles and Drafts</h2>
  <div class="article">
    <h3><%= article.title %></h3>
    <p><%= article.content %></p>
  </div>
  <div class="write-comment">
    <a class="button" href="/upload-comment">write here</a>
  </div>
  <div class="overall">
    <h3>Overall Analysis</h3>
    <div class="cards">
      <div class="card">Drafts <strong>1</strong></div>
      <div class="card">Comments <strong><%= comments.length %></strong></div>
      <div class="card">Positive <strong>1</strong></div>
      <div class="card">Negative <strong>1</strong></div>
    </div>
  </div>
</section>

