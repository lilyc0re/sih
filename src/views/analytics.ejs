<section>
  <h2>Analytics</h2>
  <div class="article-block">
    <label>Article name :</label>
    <select>
      <% articles.forEach(a => { %>
        <option><%= a.title %></option>
      <% }) %>
    </select>
  </div>
  <div class="overall">
    <h3>Overall Analysis</h3>
    <div class="cards">
      <div class="card">Drafts <strong>1</strong></div>
      <div class="card">Comments <strong><%= comments.length %></strong></div>
      <div class="card">Positive <strong>1</strong></div>
      <div class="card">Negative <strong>1</strong></div>
    </div>
    <canvas id="analyticsChart" width="300" height="300"></canvas>
  </div>
</section>

