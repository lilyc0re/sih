<section>
  <h2>Dashboard</h2>
  <div class="articles">
    <h3>Articles and Drafts</h3>
    <ul>
      <% articles.forEach(a => { %>
        <li>
          <a href="/article/<%= a.id %>"><%= a.title %></a>
        </li>
      <% }) %>
    </ul>
  </div>
  <div class="overall">
    <h3>Overall Analysis</h3>
    <div class="cards">
      <div class="card">Drafts <strong>1</strong></div>
      <div class="card">Comments <strong><%= comments.length %></strong></div>
      <div class="card">Positive <strong>1</strong></div>
      <div class="card">Negative <strong>1</strong></div>
    </div>
    <canvas id="sentimentChart" width="300" height="300"></canvas>
  </div>
</section>

